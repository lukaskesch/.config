# focus window
# cmd - j : yabai -m window --focus west
# cmd - k : yabai -m window --focus east
cmd - j : yabai -m window --focus prev || yabai -m window --focus last
cmd - k : yabai -m window --focus next || yabai -m window --focus first

# create / delete space
shift + cmd - j: yabai -m space --destroy
shift + cmd - k: yabai -m space --create

# move space
cmd - h : yabai -m space --move prev
cmd - l : yabai -m space --move next
shift + cmd - h: yabai -m space --display prev
shift + cmd - l: yabai -m space --display next

# focus space
alt - j : yabai -m space --focus prev
alt - k : yabai -m space --focus next
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10

# move window by space
shift + alt - j : yabai -m window --space prev
shift + alt - k : yabai -m window --space next

# focus display
alt - h : yabai -m display --focus prev
alt - l : yabai -m display --focus next

# move window by display
shift + alt - h : yabai -m window --display prev
shift + alt - l : yabai -m window --display next

# toggle window split type
alt - e : yabai -m window --toggle split

# Toggle layout !Important: This needs "brew install jp" in order to work!
alt - b :yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "float" else "bsp" end') 

# Make window native fullscreen
alt - f         : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen

# Rotate windows
alt - r         : yabai -m space --rotate 180

